
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center mb-3 mt-3 text-info">Lista de Veículos</h3>

<div class="row mb-3">
    <div class="col-12">
        <a href="/veiculo/cadastro" class="btn btn-primary float-right">
            <i class="fas fa-plus"></i> Novo Veículo
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Modelo</th>
            <th>Preço</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Modelo</th>
            <th>Preço</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Veiculo veiculo in ViewBag.Veiculos)
        {
            <tr>
                <td>@veiculo.Id</td>
                <td>@veiculo.Categoria.Nome</td>
                <td>@veiculo.Modelo</td>
                <td>@veiculo.Valor</td>
                <td>
                    <a href="/veiculo/editar?id=@veiculo.Id" class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>
                    <a href="/veiculo/apagar?id=@veiculo.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Editar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

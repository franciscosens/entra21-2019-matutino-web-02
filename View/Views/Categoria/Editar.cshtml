
@{
    ViewBag.Title = "Editar";
}

<h3 class="text-center mb-3 mt-3 text-info">Edição de Categoria</h3>


<form action="/categoria/update" method="post">
    <input type="hidden" name="id" value="@ViewBag.Categoria.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" class="form-control" id="campo-nome"  value="@ViewBag.Categoria.Nome"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>
</form>

